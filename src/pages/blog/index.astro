---
import Layout from '@/layouts/Layout.astro'
const blog = await Astro.glob('./*.md')
---
<Layout title='Angel Marcos | Blog ðŸ“š' description='lista de los blog'>
  <h1 class="my-6 text-xl text-yellow-500">Publicaciones recientes</h1>
  <section class="flex flex-col gap-y-4">
  {
    blog.map((post) => (
      <a href={post.url} class="rounded-lg border bg-card text-card-foreground shadow-sm hover:border hover:border-yellow-500">
      <div class="flex flex-col space-y-1.5 p-4 px-5">
        <h3 class="text-xl font-bold">{post.frontmatter.title}</h3>
        <p class="text-gray-500 dark:text-gray-400">{post.frontmatter.date}</p>
      </div>
      </a>
    ))
  }
</section></Layout>
