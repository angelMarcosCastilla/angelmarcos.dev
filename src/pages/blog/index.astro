---
import Subtitle from '@/components/Subtitle.astro'
import Layout from '@/layouts/Layout.astro'
import { getCollection } from 'astro:content'
const allBlogPosts = await getCollection('blog')
---

<Layout title='Angel Marcos | Blog ðŸ“š' description='lista de los blog'>
  <Subtitle title='Publicaciones recientes' class='text-xl m-0 mt-5 mb-6' />
  <section class='flex flex-col gap-y-3'>
    {
      allBlogPosts.map(({ data: post, slug }) => (
        <a
          href={`/blog/${slug}`}
          class='rounded-lg border bg-card text-card-foreground shadow-sm border-input'
        >
          <div class='flex flex-col space-y-1.5 p-4 px-5'>
            <h3 class='text-base font-bold'>{post.title}</h3>
            <p class='text-secondary-foreground'>{post.description}</p>
          </div>
        </a>
      ))
    }
  </section>
</Layout>
