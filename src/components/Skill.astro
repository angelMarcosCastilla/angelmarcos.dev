---
import Subtitle from './Subtitle.astro'
import Html from './icon/Html.astro'
import Css from './icon/Css.astro'
import Js from './icon/Js.astro'
import React from './icon/React.astro'
import MaterialUi from './icon/MaterialUi.astro'
import Reactroute from './icon/Reactroute.astro'
import Next from './icon/Next.astro'
import AstroIcon from './icon/AstroIcon.astro'
import Svelte from './icon/Svelte.astro'
import NodeIcon from './icon/NodeIcon.astro'
import Mysql from './icon/Mysql.astro'
import Tailwind from './icon/Tailwind.astro'
import Redux from './icon/Redux.astro'
import Php from './icon/Php.astro'
---

<section class='py-12'>
  <Subtitle title='Habilidades ' />
  <div class='animationList mt-12 relative'>
    <div class='slide'>
      <div class='item'><div class='item-content'><Html /></div></div>
      <div class='item'><div class='item-content'><Css /></div></div>
      <div class='item'><div class='item-content'><Js /></div></div>
      <div class='item'><div class='item-content'><React /></div></div>
      <div class='item'><div class='item-content'><MaterialUi /></div></div>
      <div class='item'><div class='item-content'><Reactroute /></div></div>
      <div class='item'><div class='item-content'><Next /></div></div>
      <div class='item'><div class='item-content'><Html /></div></div>
      <div class='item'><div class='item-content'><Css /></div></div>
      <div class='item'><div class='item-content'><Js /></div></div>
      <div class='item'><div class='item-content'><React /></div></div>
      <div class='item'><div class='item-content'><MaterialUi /></div></div>
      <div class='item'><div class='item-content'><Reactroute /></div></div>
      <div class='item'><div class='item-content'><Next /></div></div>
    </div>
  </div>

  <div class='animationList mt-8 relative'>
    <div class='slide slide-reverse'>
      <div class='item'><div class='item-content'><AstroIcon /></div></div>
      <div class='item'><div class='item-content'><Svelte /></div></div>
      <div class='item'><div class='item-content'><NodeIcon /></div></div>
      <div class='item'><div class='item-content'><Mysql /></div></div>
      <div class='item'><div class='item-content'><Tailwind /></div></div>
      <div class='item'><div class='item-content'><Redux /></div></div>
      <div class='item'><div class='item-content'><Php /></div></div>
      <div class='item'><div class='item-content'><AstroIcon /></div></div>
      <div class='item'><div class='item-content'><Svelte /></div></div>
      <div class='item'><div class='item-content'><NodeIcon /></div></div>
      <div class='item'><div class='item-content'><Mysql /></div></div>
      <div class='item'><div class='item-content'><Tailwind /></div></div>
      <div class='item'><div class='item-content'><Redux /></div></div>
      <div class='item'><div class='item-content'><Next /></div></div>
    </div>
  </div>
</section>

<style>
  .animationList {
    overflow: hidden;
    --cantidad: 7;
    --width: 120px;
  }
  @media screen and (min-width: 768px) {
    .animationList {
      --width: 200px;
    }
  }
  .slide {
    display: flex;
    width: calc(var(--width) * (var(--cantidad) * 2));
    animation: animationSlider 20s linear infinite;
  }
  .item-content {
    border-radius: 8px;
  }
  .slide-reverse {
    animation: animationSlider 30s linear infinite reverse;
  }
  .item {
    width: var(--width);
    height: 100px;
    flex-shrink: 0;
  }
  .background::before {
    content: '';
    position: absolute;
    top: 0;
    width: 300px;
    aspect-ratio: 1/1;
    filter: blur(120px);
    left: 50%;
    transform: translateX(-50%);
  }
  .item-content {
    width: calc(var(--width) / 2);
    height: calc(var(--width) / 2);
    display: grid;
    place-content: center;
    backdrop-filter: blur(10px);
    background: hsla(var(--secondary) / 0.5);
  }

  .slide:has(.item-content:hover) {
    animation-play-state: paused;
  }

  @keyframes animationSlider {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-1 * var(--width) * var(--cantidad)));
    }
  }
</style>
