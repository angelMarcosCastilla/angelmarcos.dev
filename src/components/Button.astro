---
interface Props {
  text: string
  variant: 'primary' | 'secondary'
}

const { text, variant } = Astro.props
const variantClass = {
  primary: 'primary font-bold py-2 px-4 text-slate-800 rounded',
  secondary: 'bg-gray-800 hover:bg-em-900 text-white font-bold py-2 px-4 rounded'
}

const buttonClass = variantClass[variant] ?? variantClass.primary
---

<button class={`px-4 py-2 ${buttonClass} `}>{text}</button>

<style>
  .primary {
    background: #11998e;
  }
</style>
