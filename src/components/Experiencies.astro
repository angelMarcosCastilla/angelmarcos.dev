---
import Subtitle from './Subtitle.astro'
import { EXPERIENCIES } from '@/data/experiencies'
---

<section class='py-8 my-12 '>
  <Subtitle title='Experiencia laboral' />
  <div class='mt-8'>
    <ol class='relative border-s border-input ml-3'>
      {
        EXPERIENCIES.map((experiencie) => (
          <li class='mb-10 ms-4'>
            <div class='absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-input bg-secondary' />
            <time class='mb-1 text-sm font-normal leading-none text-muted-foreground'>{experiencie.time}</time>
            <h3 class='text-lg font-semibold  mb-2 text-foreground'>
              {experiencie.role} âˆ’ {experiencie.company}{' '}
            </h3>
            <p class='mb-4 text-base font-normal  text-secondary-foreground text-pretty max-w-[900px]'>
              {experiencie.description}
            </p>
          </li>
        ))
      }
    </ol>
  </div>
</section>
