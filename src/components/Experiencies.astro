---
import Subtitle from './Subtitle.astro'
import { EXPERIENCIES } from '@/data/experiencies'
---
<section class='py-8 my-12 px-5 dark:bg-slate-50/5 bg-green-900/5'>
  <Subtitle title='Experiencia laboral' />
  <div class='mt-8'>
    <ol class="relative border-s dark:border-gray-200 border-gray-400 ml-3">
      {EXPERIENCIES.map((experiencie) => (
        <li class="mb-10 ms-4">
          <div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-gray-700"></div>
          <time class="mb-1 text-sm font-normal leading-none ">{experiencie.time}</time>
          <h3 class="text-lg font-semibold text-[#11998e] dark:text-[#38ef7d]  mt-2">
            {experiencie.role}  âˆ’ {experiencie.company} </h3>
          <p class="mb-4 text-base font-normal dark:text-gray-200 text-pretty max-w-[900px]">
            {experiencie.description}
          </p>
      </li>
      ))}

    </ol>
  </div>
</section>
